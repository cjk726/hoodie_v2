<div class="page-header">
  <h1>
    Comfort zones
    <a href="/comfort_zones/new" class="btn btn-lg btn-success">New Comfort zone</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Comfort zone name</th>
        <th>Comfort zone temp min</th>
        <th>Actions</th>
      </tr>

      <% @comfort_zones.each do |comfort_zone| %>
      <tr>
        <td><%= comfort_zone.comfort_zone_name %></td>
        <td><%= comfort_zone.comfort_zone_temp_min %></td>
        <td>
          <a href="/comfort_zones/<%= comfort_zone.id %>" class="btn btn-primary">Show</a>
          <a href="/comfort_zones/<%= comfort_zone.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comfort_zone/<%= comfort_zone.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
