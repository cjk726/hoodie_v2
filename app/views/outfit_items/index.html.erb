<div class="page-header">
  <h1>
    Outfit items
    <a href="/outfit_items/new" class="btn btn-lg btn-success">New Outfit item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Outfit</th>
        <th>Clothing item</th>
        <th>Actions</th>
      </tr>

      <% @outfit_items.each do |outfit_item| %>
      <tr>
        <td>
          <% if outfit_item.outfit.present? %>
            <a href="/outfits/<%= outfit_item.outfit.id %>">
              <%= outfit_item.outfit.user_id %>
            </a>
          <% end %>
        </td>
        <td>
          <% if outfit_item.clothing_item.present? %>
            <a href="/clothing_items/<%= outfit_item.clothing_item.id %>">
              <%= outfit_item.clothing_item.item_name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/outfit_items/<%= outfit_item.id %>" class="btn btn-primary">Show</a>
          <a href="/outfit_items/<%= outfit_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_outfit_item/<%= outfit_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @outfit_items, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
