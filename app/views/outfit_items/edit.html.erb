<!-- Validation failure messages -->
<% if @outfit_item.errors.any? %>
  <% @outfit_item.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Outfit Item #<%= @outfit_item.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_outfit_item/<%= @outfit_item.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for outfit_id -->
      <div class="form-group">
        <label for="outfit_id" class="control-label">
          Outfit
        </label>

        <input type="text" id="outfit_id" name="outfit_id" placeholder="Outfit" class="form-control" value="<%= @outfit_item.outfit_id %>">
      </div>

      <!-- Label and input for clothing_item_id -->
      <div class="form-group">
        <label for="clothing_item_id" class="control-label">
          Clothing item
        </label>

        <input type="text" id="clothing_item_id" name="clothing_item_id" placeholder="Clothing item" class="form-control" value="<%= @outfit_item.clothing_item_id %>">
      </div>

      <button class="btn btn-warning">
        Update Outfit Item
      </button>
      or
      <a href="/outfit_items/<%= @outfit_item.id %>">Cancel</a>
    </form>
  </div>
</div>
