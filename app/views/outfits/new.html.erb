<!-- Validation failure messages -->
<% if @outfit.errors.any? %>
  <% @outfit.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Outfit</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_outfit" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <%= select_tag(:user_id, options_from_collection_for_select(User.all, :id, :email, @outfit.user_id), :class => "form-control") %>
      </div>

      <!-- Label and input for comfort_zone_id -->
      <div class="form-group">
        <label for="comfort_zone_id" class="control-label">
          Comfort zone
        </label>

        <%= select_tag(:comfort_zone_id, options_from_collection_for_select(ComfortZone.all, :id, :comfort_zone_name, @outfit.comfort_zone_id), :class => "form-control") %>
      </div>

      <button class="btn btn-success">
        Create Outfit
      </button>
      or
      <a href="/outfits">Cancel</a>
    </form>
  </div>
</div>
