<div class="page-header">
  <h1>
    Clothing items
    <a href="/clothing_items/new" class="btn btn-lg btn-success">New Clothing item</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Item name</th>
        <th>Actions</th>
      </tr>

      <% @clothing_items.each do |clothing_item| %>
      <tr>
        <td><%= clothing_item.item_name %></td>
        <td>
          <a href="/clothing_items/<%= clothing_item.id %>" class="btn btn-primary">Show</a>
          <a href="/clothing_items/<%= clothing_item.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_clothing_item/<%= clothing_item.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
